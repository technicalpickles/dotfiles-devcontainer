#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

cd "$REPO_ROOT"

if ! command -v bats >/dev/null; then
  echo "Error: bats not found in PATH. Install with 'npm i -g bats-core' or via your package manager." >&2
  exit 1
fi

exec bats test/apply.bats
