#!/usr/bin/env bash
# Run tests for the dotfiles template

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

usage() {
  cat << EOF
Usage: $(basename "$0") [OPTIONS]

Run tests for the dotfiles template container.

OPTIONS:
  -h, --help     Show this help message

WORKFLOW:
  The container must already be running (use 'bin/setup-test' first).
  This executes the test suite inside the test container.

EXAMPLES:
  # Run tests for dotfiles template
  $(basename "$0")
EOF
}

if [[ "${1:-}" == "-h" || "${1:-}" == "--help" ]]; then
  usage
  exit 0
fi

TEMPLATE_ID="dotfiles"
SRC_DIR="$REPO_ROOT/tmp/${TEMPLATE_ID}"
ID_LABEL="test-container=${TEMPLATE_ID}"

# Check if build is needed
NEEDS_BUILD=false

if [[ ! -d "${SRC_DIR}" ]]; then
  echo "Build directory not found. Building container..."
  NEEDS_BUILD=true
else
  # Check if container is running
  CONTAINER_ID=$(docker ps --filter "label=${ID_LABEL}" --format "{{.ID}}" | head -1)
  if [[ -z "$CONTAINER_ID" ]]; then
    echo "Container is not running. Building container..."
    NEEDS_BUILD=true
  fi
fi

if [[ "$NEEDS_BUILD" == "true" ]]; then
  "$SCRIPT_DIR/build"
  echo
fi

echo "Running tests for template: ${TEMPLATE_ID}"
echo "Build directory: ${SRC_DIR}"
echo

npx --yes @devcontainers/cli@latest exec \
  --workspace-folder "${SRC_DIR}" \
  --id-label "${ID_LABEL}" \
  /bin/sh -c 'set -e && if [ -f "test-project/test.sh" ]; then cd test-project && if [ "$(id -u)" = "0" ]; then chmod +x test.sh; else sudo chmod +x test.sh; fi && ./test.sh; else echo "No tests found"; ls -la; fi'
